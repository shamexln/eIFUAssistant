page {
  background: #f7f7f7;
}
.container {
  padding: 16rpx 24rpx 120rpx; /* 预留底部投票栏空间 */
}
.page { padding: 16rpx 24rpx 120rpx; }
.hero {
  background: linear-gradient(135deg, #07C160 0%, #23D170 100%);
  color: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
}
.hero .brand { font-size: 40rpx; font-weight: 700; }
.hero .subtitle { margin-top: 6rpx; opacity: .95; }
.scan-btn { margin-top: 16rpx; background: #fff; color: #07C160; border: none; }

.search-box { background:#fff; border-radius: 16rpx; padding: 20rpx; margin-top: 20rpx; border: 1px solid #eee; }
.input-row { display: flex; align-items: center; gap: 16rpx; }
.flex { flex: 1; min-width: 0; }
.search-input {
  background: #f6f7f9;
  border-radius: 999rpx;
  padding: 16rpx 24rpx;
  border: 1px solid #e5e5e5;
}
.actions { display: flex; gap: 16rpx; margin-top: 12rpx; }

/* 语音按钮样式 */
.mic-btn {
  padding: 0 20rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 999rpx;
  background: #f6f7f9;
  color: #333;
  border: 1px solid #e5e5e5;
  white-space: nowrap;
}
.mic-btn-hover { background: #eceef1; }
.mic-btn.recording {
  border-color: #07C160;
  color: #07C160;
  background: #e6f8ee;
}
.voice-tip { color: #888; font-size: 24rpx; margin: 8rpx 0 0 8rpx; }

.grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 16rpx; margin-top: 20rpx; }
.grid-item { background:#fff; border: 1px solid #eee; border-radius: 16rpx; padding: 20rpx; text-align: center; }
.gi-title { display:block; font-weight: 600; color:#333; }
.gi-sub { display:block; color:#888; font-size: 24rpx; margin-top: 6rpx; }

.section { margin-bottom: 24rpx; }
.section-title { display:block; margin-top: 24rpx; color:#333; font-weight: 600; }
.label { color: #666; font-size: 26rpx; margin-bottom: 12rpx; display: block; }
.model-banner {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: var(--odx-c-selected, #e6f8ff);
  color: var(--odx-c-text, #333);
  border: 1px solid var(--odx-c-separator, #e5e5e5);
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
}
.model-badge {
  background: var(--odx-c-highlight, #07C160);
  color: var(--odx-c-highlight-text, #fff);
  border-radius: 999rpx;
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  white-space: nowrap;
}
.model-text {
  font-weight: 700;
  font-size: 28rpx;
  color: var(--odx-c-text, #333);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}
.input {
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  min-height: 80rpx;
  border: 1px solid #eee;
  font-size: 28rpx; /* 缩小输入/占位符的基准字号，避免长占位符溢出 */
  overflow: hidden; /* 与 placeholder 的省略号配合，避免内容溢出 */
}
.placeholder {
  color: #999;
  font-size: 24rpx; /* 占位符更小一号 */
  white-space: nowrap;       /* 占位符单行显示 */
  text-overflow: ellipsis;   /* 尾部省略号 */
  overflow: hidden;          /* 必需配合 ellipsis 使用 */
}
.btn { margin-top: 12rpx; }
.output {
  white-space: pre-wrap;
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  min-height: 160rpx;
  border: 1px solid #eee;
}
.tip { color: #888; font-size: 24rpx; margin-top: 8rpx; }
.result-card { background: #fff; padding: 16rpx; border-radius: 12rpx; margin-top: 12rpx; border: 1px solid #eee; }
.result-card .doc { display: block; font-weight: 600; color: #333; }
.result-card .snippet {
  display: block;
  color: #666;
  margin-top: 6rpx;
  /* 让长内容在小屏上自动换行、适配宽度 */
  white-space: pre-wrap;        /* 保留换行，同时允许自动换行 */
  word-break: break-word;       /* 遇到超长连续字符时强制断行 */
  overflow-wrap: anywhere;      /* 优先在任何位置换行，避免溢出 */
}
.result-card .meta { display:flex; gap: 12rpx; margin-top: 8rpx; color:#999; font-size: 24rpx; }
.result-card .score {}
.result-card .page {}
.empty { text-align:center; padding: 24rpx; }
.muted { color:#999; font-size: 24rpx; }
.detail-mask { position: fixed; left:0; top:0; right:0; bottom:0; background: rgba(0,0,0,.45); display:flex; align-items:center; justify-content:center; z-index: 999; }
.detail { width: 86vw; max-width: 640rpx; background: #fff; border-radius: 16rpx; padding: 20rpx; }
.detail-title { font-weight: 600; color:#333; }
.detail .detail-content {
  white-space: pre-wrap;
  word-break: break-word;
  overflow-wrap: anywhere;
  color: #333;
}
.close-btn { margin-top: 12rpx; }
.divider { height: 1px; background: #eaeaea; margin: 24rpx 0; }

/* 底部投票栏 */
.vote-bar {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  padding: 12rpx 24rpx calc(env(safe-area-inset-bottom) + 12rpx);
  display: flex;
  gap: 16rpx;
  justify-content: space-around;
  z-index: 998;
}
.vote-btn {
  flex: 1;
  background: #f6f7f9;
  color: #333;
  border: 1px solid #e5e5e5;
  border-radius: 999rpx;
}
.vote-btn.up { border-color: #34c759; color: #1e8f46; }
.vote-btn.down { border-color: #ff3b30; color: #b32623; }
