page {
  background: #f7f7f7;
}
.container {
  padding: 16rpx 24rpx 120rpx; /* 预留底部投票栏空间 */
}
.section { margin-bottom: 24rpx; }
.label { color: #666; font-size: 26rpx; margin-bottom: 12rpx; display: block; }
.input {
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  min-height: 80rpx;
  border: 1px solid #eee;
}
.btn { margin-top: 12rpx; }
.output {
  white-space: pre-wrap;
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  min-height: 160rpx;
  border: 1px solid #eee;
}
.tip { color: #888; font-size: 24rpx; margin-top: 8rpx; }
.result-item { background: #fff; padding: 16rpx; border-radius: 12rpx; margin-top: 12rpx; border: 1px solid #eee; }
.result-item .doc { display: block; font-weight: 600; color: #333; }
.result-item .snippet {
  display: block;
  color: #666;
  margin-top: 6rpx;
  /* 让长内容在小屏上自动换行、适配宽度 */
  white-space: pre-wrap;        /* 保留换行，同时允许自动换行 */
  word-break: break-word;       /* 遇到超长连续字符时强制断行 */
  overflow-wrap: anywhere;      /* 优先在任何位置换行，避免溢出 */
}
.detail-mask { position: fixed; left:0; top:0; right:0; bottom:0; background: rgba(0,0,0,.45); display:flex; align-items:center; justify-content:center; z-index: 999; }
.detail { width: 86vw; max-width: 640rpx; background: #fff; border-radius: 16rpx; padding: 20rpx; }
.detail .detail-content {
  white-space: pre-wrap;
  word-break: break-word;
  overflow-wrap: anywhere;
  color: #333;
}
.divider { height: 1px; background: #eaeaea; margin: 24rpx 0; }

/* 底部投票栏 */
.vote-bar {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  padding: 12rpx 24rpx calc(env(safe-area-inset-bottom) + 12rpx);
  display: flex;
  gap: 16rpx;
  justify-content: space-around;
  z-index: 998;
}
.vote-btn {
  flex: 1;
  background: #f6f7f9;
  color: #333;
  border: 1px solid #e5e5e5;
  border-radius: 999rpx;
}
.vote-btn.up { border-color: #34c759; color: #1e8f46; }
.vote-btn.down { border-color: #ff3b30; color: #b32623; }
