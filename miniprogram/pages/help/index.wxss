page {
  background: #f7f7f7;
}
.help-container { padding: 24rpx; }
.hero {
  background: linear-gradient(135deg, #07C160 0%, #23D170 100%);
  color: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
}
.hero-title { font-size: 36rpx; font-weight: 700; }
.hero-sub { display:block; margin-top: 8rpx; opacity: .95; }
.card { background:#fff; border-radius: 16rpx; padding: 24rpx; margin-bottom: 20rpx; border: 1px solid #eee; }
.card-title { font-weight: 600; color: #333; }
.card-desc { display:block; color: #666; margin-top: 8rpx; line-height: 1.6; }
.footer { margin-top: 24rpx; text-align: center; }
.muted { color:#999; font-size: 24rpx; }
