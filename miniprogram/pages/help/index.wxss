/* 与首页保持统一的白底与深蓝主题 */
page {
  background: #ffffff;
}
.help-container { padding: 24rpx; }
.hero {
  background: linear-gradient(135deg, #0F2A44 0%, #143754 100%);
  color: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
}
.hero-title { font-size: 40rpx; font-weight: 700; }
.hero-sub { display:block; margin-top: 8rpx; opacity: .95; font-size: 28rpx; }
.card { background:#fff; border-radius: 16rpx; padding: 24rpx; margin-bottom: 20rpx; border: 1px solid #e5eaf2; }
.card-title { font-weight: 600; color: #0F2A44; font-size: 28rpx; }
.card-desc { display:block; color: #666; margin-top: 8rpx; line-height: 1.6; font-size: 28rpx; }
.footer { margin-top: 24rpx; text-align: center; }
.muted { color:#999; font-size: 24rpx; }
